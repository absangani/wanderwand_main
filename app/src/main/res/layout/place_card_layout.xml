<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--ImageVIew to display our Plece Image-->
    <ImageView
        android:id="@+id/idIVPleceImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:src="@drawable/city" />

    <!--Text View to display Plece Name-->
    <TextView
        android:id="@+id/idTVPleceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/idIVPleceImage"
        android:text="@string/prompt_city_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVPleceRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVPleceName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/idIVPleceImage"
            android:drawablePadding="2dp"
            android:text="@string/shopping_text"
            app:drawableStartCompat="@drawable/ic_share_black_24dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>